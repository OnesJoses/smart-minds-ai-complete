# Smart Minds AI - Environment Variables Template
# Copy this file to .env.local and customize the values

# Application Configuration
VITE_APP_NAME="Smart Minds AI"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="AI-powered learning platform with free OpenAI access"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPERIMENTS=true
VITE_ENABLE_AI_IMAGE_GENERATION=true
VITE_ENABLE_ADVANCED_FEATURES=true

# API Configuration (if needed for future features)
# VITE_API_BASE_URL=http://localhost:3000
# VITE_API_TIMEOUT=10000

# External Services (if needed)
# VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here
# VITE_SENTRY_DSN=your_sentry_dsn_here

# Development Settings
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
